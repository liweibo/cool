<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	>
	<LinearLayout
		android:orientation="vertical"
		android:id="@+id/ll_main_stuab"
		android:visibility="gone"
		android:layout_width="match_parent"
		android:layout_height="1dp">

	</LinearLayout>


	<LinearLayout
		android:id="@+id/ll_default"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="@drawable/divider"
		android:showDividers="middle"
		android:background="@drawable/ren"
		android:dividerHeight="1px"
		>

		<TextView
			android:id="@+id/textView1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:textSize="26sp"
			android:textColor="#88f"
			android:text="请输入默认城市" />
		<!-- 默认城市1 -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="5dp"
				android:textSize="20sp"
				android:textColor="#88f"

				android:text="城市1:"/>
			<TextView
				android:id="@+id/city1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:textSize="20sp"
				android:clickable="true"
				android:textColor="#88f"
				android:hint="点击输入城市"/>
		</LinearLayout>
		<!-- 默认城市2 -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:textColor="#88f"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="5dp"
				android:textSize="20sp"
				android:text="城市2:"/>
			<TextView
				android:textColor="#88f"
				android:id="@+id/city2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:textSize="20sp"
				android:clickable="true"
				android:hint="点击输入城市"/>
		</LinearLayout>
		<!-- 默认城市3 -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:textColor="#88f"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="5dp"
				android:textSize="20sp"
				android:text="城市3:"/>
			<TextView
				android:textColor="#88f"
				android:id="@+id/city3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:textSize="20sp"
				android:clickable="true"
				android:hint="点击输入城市"/>
		</LinearLayout>
		<!-- 默认城市4 -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:textColor="#88f"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="5dp"
				android:textSize="20sp"
				android:text="城市4:"/>
			<TextView
				android:textColor="#88f"
				android:id="@+id/city4"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:textSize="20sp"
				android:clickable="true"
				android:hint="点击输入城市"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:gravity="center">
			<Button
				android:id="@+id/defaultcity_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="返回"
				android:textSize="10sp"
				android:background="@drawable/selector_circle_button"/>
			<Button
				android:layout_marginLeft="10dp"
				android:id="@+id/defaultcity_word"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="小秘密"
				android:textSize="10sp"
				android:background="@drawable/selector_circle_button"/>
		</LinearLayout>

	</LinearLayout>

</LinearLayout>
